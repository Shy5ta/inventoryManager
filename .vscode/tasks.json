{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Inventory Manager",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++11",
                "-g",
                "${workspaceFolder}/main.cpp",
                "${workspaceFolder}/inventoryManager.cpp",
                "${workspaceFolder}/perishableItem.cpp",
                "${workspaceFolder}/nonPerishableItem.cpp",
                "-o",
                "${workspaceFolder}/inventory_app"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++.exe build active file",
            "command": "C:/MinGW/bin/g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "C:/MinGW/bin"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "detail": "Task generated by Debugger."
        }
    ]
}